<!DOCTYPE html>
<html lang="en">

<head>
  <title>Bendito's Taqueria</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
  <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
  <link href="https://fonts.googleapis.com/css?family=Hanalei+Fill" rel="stylesheet">
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.1.0/css/all.css" integrity="sha384-lKuwvrZot6UHsBSfcMvOkWwlCMgc0TaWr+30HWe3a4ltaBwTZhyTEggF5tJv8tbt" crossorigin="anonymous">
  <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  <script type="text/javascript" src="/scripts/app_menu.js"></script>
</head>

<body>
  <img id="background" src="/images/bigtacos.jpg" style="border-radius: 0;">
  <div class="container admin header">
    <h1 class="text-center logo">
      <img id="logoimg" src="/images/burrito.png">
      <a class="logo" href="/">
      Bendito's Taqueria
    </a>
  </h1>
  </div>
<div class="icon-bar">
  <a href="#" class="facebook"><i class="fa fa-facebook"></i></a>
  <a href="#" class="twitter"><i class="fa fa-twitter"></i></a>
  <a href="#" class="google"><i class="fa fa-google"></i></a>
  <a href="#" class="whatsapp"><i class="fa fa-whatsapp"></i></a>
  <a href="#" class="pinterest"><i class="fa fa-pinterest"></i></a>
  <a href="#" class="envelope"><i class="fa fa-envelope"></i></a>
</div>

  <!-- Menu and order total -->
  <div id="total" class="total-container clearfix">
    <div class="menu-float">
      <strong class="menu-title">Menu</strong>
      <ul class="nav-main">
        <li><a class="anchor" href="#menu-favourites">Favourites</a></li>
        <li><a class="anchor" href="#menu-food">Foods</a></li>
        <li><a class="anchor" href="#menu-drink">Drinks</a></li>
        <li><a class="anchor" href="#checkout">Checkout</a></li>
        <li><a class="anchor" href="/contact">Contact Us</a></li>
      </ul>
    </div>
    <div class="menu-title"><span class="fa fa-shopping-cart"></span><span class="item2 order-total" ></span></div>
  </div>

  <div class="container menu">
    <form class="menu" action="/" method="post">
      <h2 class="text-center">Order Takeout</h2>
      <!-- START Inster Area -->

      <!-- END Insert Area -->
      <div id="menu-favourites" class="row">
        <h3>Favourites</h3>
      </div>
      <div id="menu-food" class="row">
        <h3>Foods</h3>
      </div>
      <div id="menu-drink" class="row">
        <h3>Drinks</h3>
      </div>

      <div class="form-row text-center">
        <div class="total-container">
          <span>Total $</span>
          <span class="order-total"></span>
        </div>

        <div class="col-xs-12 ">
          <p class="error-message">Please enter your details below to submit your order</p>
        </div>
      </div>
      <div id="checkout" class="form-row text-center">
        <div class="col-sm-5">
          <input type="text" id="name" class="form-control" placeholder="Name" name="name">
        </div>
        <div class="col-sm-4">
          <input type="text" id="phone" class="form-control phoneNumber" placeholder="Phone Number" name="phone">
        </div>
        <div class="col-sm-3">
          <button id="submit" type="submit" value="submit" class="btn btn-primary">Place Order</button>
        </div>
      </div>
    </form>
  </div>
</body>

</html>
