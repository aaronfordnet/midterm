<!DOCTYPE html>
<html lang="en">

<head>
  <title>Bendito's Taqueria</title>
  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
  <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
  <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
  <link href="https://fonts.googleapis.com/css?family=Hanalei+Fill" rel="stylesheet">
  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  <script type="text/javascript" src="/scripts/app_menu.js"></script>
</head>

<body>
  <h1 class="text-center logo">Bendito's Taqueria</h1>
  <div class="container menu">
    <form class="menu" action="/" method="post">
      <h2 class="text-center">Order Takeout</h2>
      <!-- START Inster Area -->

      <!-- END Insert Area -->
      <div id="menu-food" class="row">Foods</div>
      <div id="menu-drink" class="row">Drinks</div>
      <div class="total-container">
        <span class="total">Total $</span>
        <span id="order-total"></span>
      </div>
      <div class="form-row text-center">
        <div class="col-xs-12 ">
          <p class="error-message">Please enter your details below to submit your order</p>
        </div>
      </div>
      <div class="form-row text-center">
        <div class="col-sm-5">
          <input type="text" id="name" class="form-control" placeholder="Name" name="name">
        </div>
        <div class="col-sm-4">
          <input type="text" id="phone" class="form-control phoneNumber" placeholder="Phone Number" name="phone">
        </div>
        <div class="col-sm-3">
          <button id="submit" type="submit" value="submit" class="btn btn-primary">Place Order</button>
        </div>
      </div>
    </form>
  </div>
</body>

</html>
